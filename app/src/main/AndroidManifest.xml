<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.liuyuan.nyy">

    <!-- 使用照相机权限 -->
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <!-- 自动对焦权限 -->
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <!-- SDCard中\卸载权限 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <!-- SDCard写权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- 开启闪光灯权限 -->
    <permission android:name="android.permission.FLASHLIGHT" />
    <!-- 连接网络权限，用于执行云端语音能力 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 获取手机录音机使用权限，听写、识别、语义理解需要用到此权限 -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <!-- 读取网络信息状态 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- 获取当前wifi状态 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!-- 允许程序改变网络连接状态 -->
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <!-- 读取手机信息权限 -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <meta-data
        android:name="IFLYTEK_APPKEY"
        android:value="&apos;586b4498&apos;" />

    <application
        android:name=".SpeechApp"
        android:allowBackup="true"
        android:icon="@drawable/icon_one"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity android:name=".regist.RegistActivity"
            android:windowSoftInputMode="adjustUnspecified|stateHidden"
            android:screenOrientation="sensor"/>
        <activity android:name=".regist.VocalRegist"
            android:screenOrientation="sensor"/>
        <activity android:name=".regist.FaceRegist"
        android:screenOrientation="sensor"/>
        <activity android:name=".regist.FaceRegist1"
            android:screenOrientation="sensor"/>
        <activity android:name=".regist.GroupManage"
            android:screenOrientation="sensor"/>
        <activity android:name=".MixVerifyActivity" />
        <activity android:name=".MixVerifyActivity1"
            android:screenOrientation="landscape"/>
        <activity android:name=".InputPwdActivity"
            android:screenOrientation="sensor"/>
    </application>

</manifest>